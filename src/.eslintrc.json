{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "next/core-web-vitals",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
    "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "import", 
    "unused-imports",
    "@typescript-eslint"
  ],
  "settings": {},
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "array-bracket-newline": ["error", 
      {
        "multiline": true
      }
    ],
    "arrow-spacing": [
      "error", 
      { 
        "before": true, 
        "after": true 
      }
    ],
    "block-spacing": [
      "error", 
      "always"
    ],
    "comma-spacing": [
      "error", 
      { 
        "before": false, 
        "after": true 
      }
      ],
    "indent": [
      "error",
      2
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "alphabetize": {
          "order": "asc"
        },
        "newlines-between":  "always"
      }
    ],
    "import/no-extraneous-dependencies": [
      "warn", 
      { 
        "bundledDependencies": false 
      }
    ],
    "object-curly-newline": [
      "error", 
      { 
        "multiline": true 
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "sort-vars": [
      "error", 
      { 
        "ignoreCase": true 
      }
    ],
    "sort-keys": [
      "error", 
      "asc", 
      {
        "caseSensitive": false, 
        "natural": true
      }
    ],
    "sort-imports": "off",
    "unused-imports/no-unused-imports": "error"
  }
}
